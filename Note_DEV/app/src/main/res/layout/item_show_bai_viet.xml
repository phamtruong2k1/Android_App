<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/khung_bang_tin"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/cardviewofuser"
                app:cardCornerRadius="30dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/baiviet_avt"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/avartar_mac_dinh">

                </ImageView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/baiviet_name"
                android:text="Name"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_margin="5dp"
                android:layout_width="180dp"
                android:layout_height="50dp"
                />
            <TextView
                android:id="@+id/baiviet_time"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_margin="5dp"
                android:layout_width="120dp"
                android:layout_height="50dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:padding="5dp"
                android:id="@+id/baiviet_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />
            <TextView
                android:id="@+id/baiviet_status"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:weightSum="10"
                >

                <ImageView
                    android:id="@+id/baiviet_an_liked"
                    android:layout_width="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/icons8_love_96"
                    />
                <TextView
                    android:id="@+id/baiviet_liked"
                    android:paddingLeft="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:text="10"
                    />
                <ImageView
                    android:id="@+id/baiviet_an_disliked"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/icons8_angry_96"
                    />
                <TextView
                    android:id="@+id/baiviet_disliked"
                    android:paddingLeft="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:text="10"
                    />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>