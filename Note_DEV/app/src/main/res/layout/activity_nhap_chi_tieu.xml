<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".zhome.zchitieu.chitieu.NhapChiTieuActivity"
    android:orientation="vertical"
    android:background="#ECE3A8"
    android:weightSum="10"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:weightSum="10"
        android:background="#F3A91A"
        >
        <ImageView
            android:id="@+id/thoat_them"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/back_icon_24"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="Thêm chi tiêu"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:weightSum="10"
        >
        <ImageView
            android:src="@mipmap/icons8_sort_down_128"
            android:padding="8dp"
            android:id="@+id/chon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            />
        <ImageView
            android:src="@mipmap/icons8_home_160"
            android:paddingVertical="15dp"
            android:paddingRight="15dp"
            android:id="@+id/img_nhap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            />
        <TextView
            android:text="Nhà ở"
            android:gravity="center_vertical|left"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/text_nhap"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000"
        android:layout_weight="0.01"
        />

    <EditText
        android:id="@+id/nhap_tien"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:gravity="right|bottom"
        android:hint="0 VND"
        android:inputType="number"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:weightSum="10"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@mipmap/icons8_calendar_96"
            android:padding="10dp"
            />
        <TextView
            android:text="Ngày tháng"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center_vertical|left"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="22dp"
            android:gravity="center_vertical|left"
            android:id="@+id/text_ngay"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:weightSum="10"
        >
        <ImageView
            android:src="@mipmap/icons8_time_80"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            />
        <TextView
            android:text="Thời gian"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center_vertical|left"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <TextView
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:gravity="center_vertical|left"
            android:id="@+id/text_gio"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:weightSum="10"
        >
        <ImageView
            android:src="@mipmap/icons8_notepad_96"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            />
        <TextView
            android:text="Ghi chú"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center_vertical|left"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <EditText
            android:textColor="@color/black"
            android:textSize="18dp"
            android:id="@+id/ghichu"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>


    <Button
        android:layout_marginTop="25dp"
        android:id="@+id/add"
        android:layout_marginHorizontal="100dp"
        android:text="Thêm"
        android:background="#AC0303"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        />


</LinearLayout>