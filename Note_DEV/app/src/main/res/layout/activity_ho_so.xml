<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".profile.HoSoActivity"
    android:orientation="vertical"
    android:weightSum="10"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:weightSum="10"
        android:background="@color/background_xanh_tim"
        >
        <ImageView
            android:id="@+id/thoat_hoso"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back_icon_24"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:text="Hồ Sơ"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.25"
        android:orientation="vertical"
        android:weightSum="10"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="20dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/cardviewofuser"
                app:cardCornerRadius="56dp">
                <ImageView
                    android:id="@+id/imageviewofuser"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/avartar_mac_dinh">
                </ImageView>
            </androidx.cardview.widget.CardView>
            <ImageView
                android:id="@+id/hoso_sua_avt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="20dp"
                />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:weightSum="10"
                    android:layout_marginHorizontal="20dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="2"
                        android:text="Tài khoản:"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/hoso_account"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="ID:"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/hoso_accId"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/black"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:weightSum="10"
                    android:layout_marginHorizontal="20dp"
                    >
                    <TextView
                        android:text="Tên:"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        />
                    <TextView
                        android:text="name"
                        android:id="@+id/hoso_name_in_app"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6.5"
                        android:textColor="@color/black"
                        />
                    <ImageView
                        android:id="@+id/hoso_sua_name_in_app"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1.5"
                        android:src="@drawable/ic_baseline_edit_24"
                        android:padding="15dp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:weightSum="10"
                    android:layout_marginHorizontal="20dp"
                    >
                    <TextView
                        android:text="Gmail:"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        />
                    <TextView
                        android:text="gmail"
                        android:id="@+id/hoso_gmail"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6.5"
                        android:textColor="@color/black"
                        />
                    <ImageView
                        android:id="@+id/hoso_sua_gmail"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1.5"
                        android:src="@drawable/ic_baseline_edit_24"
                        android:padding="15dp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:weightSum="10"
                    android:layout_marginHorizontal="20dp"
                    >
                    <TextView
                        android:text="Sex"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        />
                    <TextView
                        android:text="sex"
                        android:id="@+id/hoso_sex"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6.5"
                        android:textColor="@color/black"
                        />
                    <ImageView
                        android:id="@+id/hoso_sua_sex"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1.5"
                        android:src="@drawable/ic_baseline_edit_24"
                        android:padding="15dp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:weightSum="10"
                    android:layout_marginHorizontal="20dp"
                    >
                    <TextView
                        android:text="Quê quán:"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        />
                    <TextView
                        android:text="que quán"
                        android:id="@+id/hoso_quenquan"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6.5"
                        android:textColor="@color/black"
                        />
                    <ImageView
                        android:id="@+id/hoso_sua_que_quan"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1.5"
                        android:src="@drawable/ic_baseline_edit_24"
                        android:padding="15dp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:weightSum="10"
                    android:layout_marginHorizontal="20dp"
                    >
                    <TextView
                        android:text="Hôn nhân"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:text="hôn nhân"
                        android:id="@+id/hoso_honnhan"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6.5"
                        android:textColor="@color/black"
                        />
                    <ImageView
                        android:id="@+id/hoso_sua_hoannhan"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1.5"
                        android:src="@drawable/ic_baseline_edit_24"
                        android:padding="15dp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:weightSum="10"
                    android:layout_marginHorizontal="20dp"
                    >
                    <TextView
                        android:text="SDT:"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:text="sdt"
                        android:id="@+id/hoso_sdt"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6.5"
                        android:textColor="@color/black"
                        />
                    <ImageView
                        android:id="@+id/hoso_sua_sdt"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1.5"
                        android:src="@drawable/ic_baseline_edit_24"
                        android:padding="15dp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:weightSum="10"
                    android:layout_marginHorizontal="20dp"
                    >
                    <TextView
                        android:text="Status:"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="2"
                        />
                    <TextView
                        android:text="status"
                        android:id="@+id/hoso_status"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6.5"
                        android:textColor="@color/black"
                        />
                    <ImageView
                        android:id="@+id/hoso_sua_status"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1.5"
                        android:src="@drawable/ic_baseline_edit_24"
                        android:padding="15dp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/black"
                    />
                <Button
                    android:id="@+id/xoa_tai_khoan"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:text="Xóa tài hoản"
                    />
            </LinearLayout>


        </ScrollView>

    </LinearLayout>
</LinearLayout>
