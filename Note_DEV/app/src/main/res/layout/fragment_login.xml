<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".zcongdong.singin.LoginFragment"
    android:background="@color/mau_nen"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <TextView
            android:text="Đăng nhập"
            android:gravity="center"
            android:textColor="#EF0707"
            android:textStyle="bold"
            android:textSize="28dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            />
        <LinearLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="10"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/icons8_user_96"
                />
            <EditText
                android:id="@+id/taikhoan"
                android:hint="Tài khoản"
                android:paddingLeft="8dp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="10"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/icons8_password_100"
                />
            <EditText
                android:id="@+id/matkhau"
                android:hint="Mật khẩu"
                android:paddingLeft="8dp"
                android:textColor="@color/black"
                android:password="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            />
        <TextView
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="Quên mật khẩu"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            />
        <Button
            android:id="@+id/dangnhap"
            android:layout_marginHorizontal="90dp"
            android:text="Đăng nhập"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:textColor="@color/white"
            android:background="#DD1B1B"
            />


    </LinearLayout>


</FrameLayout>