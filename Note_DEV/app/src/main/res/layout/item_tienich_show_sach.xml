<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    >

    <LinearLayout
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:layout_marginTop="15dp"
        android:background="@drawable/vien_tiechich_show_sach"
        >
        <LinearLayout
            android:id="@+id/show_truyen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8.5"
            android:weightSum="3"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:weightSum="10"
                    >
                    <TextView
                        android:id="@+id/name_truyen"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8.5"
                        android:gravity="center_vertical"
                        android:textColor="#E80909"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:paddingHorizontal="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:paddingLeft="3dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:text="Thể loại:"
                        />
                    <TextView
                        android:id="@+id/theloai_truyen"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:text="Tác giả:"
                        />
                    <TextView
                        android:id="@+id/tacgia_truyen"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
        <ImageButton
            android:id="@+id/xoa_sach"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:layout_height="50dp"
            android:background="@null"
            android:src="@drawable/ic_baseline_delete_24"
            />
    </LinearLayout>

</LinearLayout>