<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="260dp"
    android:orientation="vertical"
    android:background="@drawable/vien_dialog_home"
    >

    <TextView
        android:layout_margin="4dp"
        android:background="#EDA931"
        android:text="Mật khẩu ứng dụng"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        />
    <EditText
        android:id="@+id/pass_app_nhap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:hint="Nhập mật khẩu ứng dụng"
        android:textSize="20dp"
        android:password="true"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <Button
            android:background="#E3DDDD"
            android:layout_margin="7dp"
            android:id="@+id/thoat_pass_app"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Thoát"
            />
        <Button
            android:textColor="@color/white"
            android:background="#F60606"
            android:layout_margin="7dp"
            android:id="@+id/nhap_pass_app"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Xác nhận"
            />
    </LinearLayout>
</LinearLayout>