<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".zhome.zchitieu.chitieu.ShowChiTieuActivity"
    android:orientation="vertical"
    android:background="#ECE3A8"
    android:weightSum="10"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:weightSum="10"
        android:background="@color/background_xanh_tim"
        >
        <ImageView
            android:id="@+id/thoat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/back_icon_24"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="Chi tiết chi tieu"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/white"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:weightSum="10"
        >
        <ImageView
            android:id="@+id/left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/ic_baseline_chevron_left_24"
            />
        <TextView
            android:id="@+id/thang"
            android:textColor="@color/black"
            android:text="8/2021"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            />
        <ImageView
            android:id="@+id/right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/ic_baseline_chevron_right_24"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="10"
        >
        <ImageView
            android:src="@mipmap/icons8_sort_down_128"
            android:padding="8dp"
            android:id="@+id/chon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            />
        <ImageView
            android:src="@mipmap/icons8_home_160"
            android:paddingVertical="15dp"
            android:paddingRight="15dp"
            android:id="@+id/img_nhap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            />
        <TextView
            android:text="Nhà ở"
            android:gravity="center_vertical|left"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/text_nhap"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.02"
        android:background="#000"
        android:layout_marginHorizontal="8dp"
        />
    <ListView
        android:layout_marginHorizontal="8dp"
        android:id="@+id/lv_show"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.5"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.02"
        android:background="#000"
        android:layout_marginHorizontal="8dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.02"
            android:gravity="center_vertical|left"
            android:text="Tổng:"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tong"
            android:layout_marginRight="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.02"
            android:gravity="center_vertical|right"
            android:text="-99999999"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
    </LinearLayout>


</LinearLayout>