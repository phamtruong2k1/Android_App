<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".congdong.zbanbe.timban.TimBanFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        >
        <EditText
            android:id="@+id/timban_nhapid"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:layout_marginHorizontal="20dp"
            android:hint="Nhập ID người dùng tìm kiếm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/timban_tim"
            android:layout_marginHorizontal="50dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:text="Tìm"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/timban_all"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="Tất cả"
            />

        <TextView
            android:id="@+id/timban_ans"
            android:gravity="center_horizontal|bottom"
            android:text="Tất cả"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />


        <ListView
            android:id="@+id/timban_lv_show"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.5"
            android:layout_marginHorizontal="15dp"
            />

    </LinearLayout>

</FrameLayout>