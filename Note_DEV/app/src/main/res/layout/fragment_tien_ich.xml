<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".zcongdong.tienich.TienIchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical"
        android:background="@color/mau_nen"
        >

        <LinearLayout
            android:id="@+id/tienich_monan"
            android:weightSum="5"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="@drawable/vien_khung_den_nen_app"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:src="@mipmap/icons8_hamburger_100"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Món ăn"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tienich_truyen"
            android:weightSum="5"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="@drawable/vien_khung_den_nen_app"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:src="@mipmap/icons8_book_100"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Truyện"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
        </LinearLayout>


    </LinearLayout>

</FrameLayout>