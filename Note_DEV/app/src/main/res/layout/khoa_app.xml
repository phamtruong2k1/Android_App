<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="280dp"
    android:orientation="vertical"
    android:background="@drawable/vien_dialog_home"
    >
    <TextView
        android:layout_margin="4dp"
        android:background="#EDA931"
        android:text="Khóa ứng dụng"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <EditText
        android:textColor="@color/black"
        android:password="true"
        android:id="@+id/pass_app_nhap_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:hint="Nhập mật khẩu"
        />
    <EditText
        android:id="@+id/pass_app_nhap_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:hint="Xác nhận"
        android:textColor="@color/black"
        android:password="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <Button
            android:background="#E6DADA"
            android:layout_margin="4dp"
            android:id="@+id/thoat_pass_app"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Thoát"
            />
        <Button
            android:background="#FB9A09"
            android:layout_margin="4dp"
            android:id="@+id/xoa_pass_app"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Xóa mật khẩu"
            />
        <Button
            android:background="#E80606"
            android:layout_margin="4dp"
            android:textColor="@color/white"
            android:id="@+id/nhap_pass_app"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Xác nhận"
            />
    </LinearLayout>
</LinearLayout>