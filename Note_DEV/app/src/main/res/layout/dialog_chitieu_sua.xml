<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="600dp"
    android:orientation="vertical"
    android:weightSum="7"
    android:background="@drawable/vien_show_chitieu_chitieu"
    >
    <EditText
        android:id="@+id/tien"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:gravity="right|bottom"
        android:hint="0 VND"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:weightSum="10"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@mipmap/icons8_calendar_96"
            android:padding="10dp"
            />
        <TextView
            android:text="Ngày tháng"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center_vertical|left"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="22dp"
            android:gravity="center_vertical|left"
            android:id="@+id/ngay"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:weightSum="10"
        >
        <ImageView
            android:src="@mipmap/icons8_time_80"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            />
        <TextView
            android:text="Thời gian"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center_vertical|left"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <TextView
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:gravity="center_vertical|left"
            android:id="@+id/gio"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:weightSum="10"
        >
        <ImageView
            android:src="@mipmap/icons8_notepad_96"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            />
        <TextView
            android:text="Ghi chú"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center_vertical|left"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <EditText
            android:textColor="@color/black"
            android:textSize="18dp"
            android:id="@+id/ghichu"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_marginHorizontal="30dp"

        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/huy"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="Hủy"
            android:background="#816969"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            />
        <Button
            android:id="@+id/sua1"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="Sửa"
            android:background="#AC0303"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

    </LinearLayout>



</LinearLayout>