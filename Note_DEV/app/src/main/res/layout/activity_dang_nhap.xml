<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".zcongdong.singin.DangNhapActivity"
    android:weightSum="10"
    android:orientation="vertical"
    android:background="@color/mau_nen"
    >
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navi_dangnhap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="0.7"
        android:background="#F86806"
        app:itemIconTint="@color/navi_main"
        app:itemTextColor="@color/navi_main"
        app:menu="@menu/menu_congdong_dangnhap" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_dangnhap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.3"
        />




</LinearLayout>