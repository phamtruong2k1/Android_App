<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".congdong.baiviet.BaiVietActivity"
    android:orientation="vertical"
    android:weightSum="10"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:weightSum="10"
        android:background="@color/background_xanh_tim"
        >
        <ImageView
            android:id="@+id/thoat_baiviet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_arrow_back_24_2"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:text="Bài viết"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/tailai_baiviet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_refresh_24"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/cam_hit"

            />
        <Button
            android:id="@+id/them_baiviet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_add_24"
            android:layout_marginVertical="4dp"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/cam_hit"

            />
    </LinearLayout>
    <ListView
        android:id="@+id/lv_show_baiviet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        />



</LinearLayout>