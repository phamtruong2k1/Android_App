<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign.SignInActivity"
    android:orientation="vertical"
    android:weightSum="10"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:weightSum="10"
        android:background="@color/background_xanh_tim"
        >
        <ImageView
            android:id="@+id/thoat_dangnhap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/back_icon_24"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="Đăng nhập"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <EditText
        android:textColor="@color/black"
        android:layout_marginHorizontal="20dp"
        android:paddingLeft="10dp"
        android:id="@+id/signin_account"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Tài khoản"
        />
    <EditText
        android:textColor="@color/black"
        android:layout_marginHorizontal="20dp"
        android:paddingLeft="10dp"
        android:hint="Mật khẩu"
        android:password="true"
        android:id="@+id/signin_password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <Button
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:layout_marginHorizontal="50dp"
        android:id="@+id/dangnhap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Đăng nhập"
        android:background="#E80C0C"
        />
    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/dangky"
        android:layout_marginRight="160dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:text="đăng ký"
        android:textSize="12dp"
        />
</LinearLayout>