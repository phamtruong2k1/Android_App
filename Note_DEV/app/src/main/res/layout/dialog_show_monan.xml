<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="420dp"
    android:layout_height="700dp"
    android:orientation="vertical"
    android:weightSum="10"
    >
    <TextView
        android:id="@+id/monan_name"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#E63609"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/monan_avt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                />
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Nguyên Liệu"
                android:background="#B59090"
                />
            <TextView
                android:id="@+id/monan_nguyenlieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Công thức"
                android:background="#B59090"
                />
            <TextView
                android:id="@+id/monan_conthuc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Chi phí"
                android:background="#B59090"
                />
            <TextView
                android:id="@+id/monan_tien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />


        </LinearLayout>


    </ScrollView>


</LinearLayout>